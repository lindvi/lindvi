<h1>Listing sites</h1>

<table class="table table-striped">
  <tr>
    <th>Name</th>
    <th>Url</th>
    <th>Active?</th>
    <th>Controllers</th>
  </tr>

<% @sites.each do |site| %>
  <tr>
    <td><%= site.name %></td>
    <td><%= site.url %></td>
    <td><%= site.active %></td>
    <td>
      <%= link_to 'Show', site %>
      <%= link_to 'Edit', edit_site_path(site) %>
      <%= link_to 'Destroy', site, method: :delete, data: { confirm: 'Are you sure?' } %>
    </td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Site', new_site_path %>
